<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RootToRise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RootToRise.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/media/logo-brand.svg" alt="Root to Rise Logo" height="120" width="100" />
            </a>
            <span>
                Root To Rise Botanicals
            </span>
            <button>
                <img width="75" height="75" src="/media/hamburger.svg" alt="Mobile toggle icon"/>
            </button>
            <menu>
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                     <li>
                        <a asp-area="" asp-controller="Home" asp-action="Yoga">Yoga</a>
                    </li> 
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Blog" asp-action="Index">Blog</a>
                    </li> 
                    <li >
                        <a asp-area="" asp-controller="Wholesale" asp-action="Index">Wholesale</a>
                    </li>
                </ul>
                <div>
                    <a asp-area="" asp-controller="Wholesale" asp-action="Index">
                        <img width="35" height="35" src="/media/icon-person.svg" alt="Account Icon."/>
                    </a>
                    <a href="/">
                        <img width="35" height="35" src="/media/icon-instagram.svg" alt="Instagram Icon."/>
                    </a>
                    <a asp-area="" asp-controller="Shop" asp-action="Index">
                        <img width="35" height="35" src="/media/icon-cart.svg" alt="Cart Icon."/>
                    </a>
                </div>
            </menu>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer>
        <div class="container">
            &copy; 2022 - Root to Rise Botanicals LLC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
